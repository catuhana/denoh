{
  "fmt": {
    "files": {
      "include": ["denoh.ts", "src/"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "singleQuote": true,
      "useTabs": false
    }
  },
  "lint": {
    "files": {
      "include": ["denoh.ts", "src/"]
    }
  },
  "tasks": {
    "run": "deno run --allow-read --allow-write denoh.ts",
    "lint": "deno lint",
    "lint:fmt": "deno fmt --check",
    "set-hooks": "deno task run"
  },
  "imports": {
    "std:encoding/jsonc": "https://deno.land/std@0.177.0/encoding/jsonc.ts",
    "std:path": "https://deno.land/std@0.177.0/path/mod.ts"
  },
  "githooks": {
    "pre-commit": ["lint ; lint:fmt"]
  }
}
