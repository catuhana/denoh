{
  "fmt": {
    "files": {
      "include": ["denoh.ts"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "singleQuote": true,
      "useTabs": false
    }
  },
  "lint": {
    "files": {
      "include": ["denoh.ts"]
    }
  },
  "tasks": {
    "run": "deno run --allow-read --allow-write denoh.ts",
    "lint": "deno lint",
    "lint:fmt": "deno fmt --check",
    "set-hooks": "deno task run"
  },
  "githooks": {
    "pre-commit": ["lint | lint:fmt"]
  }
}
