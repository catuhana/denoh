{
  "fmt": {
    "files": {
      "include": ["denoh.ts", "src/"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "singleQuote": true,
      "useTabs": false
    }
  },
  "lint": {
    "files": {
      "include": ["denoh.ts", "src/"]
    }
  },
  "tasks": {
    "run": "deno run --allow-read --allow-write denoh.ts",
    "test": "deno test -A",
    "lint": "deno lint",
    "lint:fmt": "deno fmt --check",
    "set-hooks": "deno task run"
  },
  "githooks": {
    "pre-commit": ["test && lint ; lint:fmt"]
  }
}
