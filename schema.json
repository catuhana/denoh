          "description": "https://git-scm.com/docs/githooks#_commit-msg"
        },
        "post-commit": {
          "$ref": "#/$defs/hookProperties",
          "description": "https://git-scm.com/docs/githooks#_post-commit"
        },
        "pre-rebase": {
          "$ref": "#/$defs/hookProperties",
